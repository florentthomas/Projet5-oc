
{% extends "admin_blog.twig" %}


{% block title %}
    <title>Commentaires signalés</title>
{% endblock %}

{% block description %}
    <meta name="description" content=""/>
{% endblock %}

{% block admin %}

    <p id="result" class="message_fixed"></p>

    {% if comments_reported is empty %}

        <p class="message">Aucun commentaire signalé</p>

    {% endif %}


    {% for comment_reported in comments_reported %}

        <div class="comment_article_card">

            <div class="container_comment">
                <div class="user">

                    {% for user in users %}
                        {% if comment_reported.id_user == user.id %}
                            <img class="photo_profil" src="{{user.url_photo}}"  alt=""/>
                            <div>{{user.pseudo}}</div>
                            <div>{{comment_reported.date_comment|date("d/m/y")}}</div>
                        {% endif %}
                    {% endfor %}
                </div>

                <div class="comment">
                    {{comment_reported.comment}}
                </div>
            </div>
        
            <div class="btn_comment_end">

                
                <a href="{{URL}}admin_blog/approve_comment/{{comment_reported.id}}" class="approve_comment"><button class="button-blue">Approuver</button></a>
                <a href="{{URL}}admin_blog/delete_comment/{{comment_reported.id}}" class="delete_comment"><button class="button-red">Supprimer</button></a>
                
                
            </div>
            Commentaire signalé par {{comment_reported.count_reported}} utilisateurs
            
        </div>

    {% endfor %}


    

    
{% endblock %}

{% block script %}

    <script src="{{URL}}Public/js/message_ajax.js"></script>
    <script src="{{URL}}Public/js/message_error_ajax.js"></script>
    <script src="{{URL}}Public/js/comments.js"></script>

{% endblock %}