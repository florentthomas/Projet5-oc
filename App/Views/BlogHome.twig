{% endblock %}

{% block content %}

    <header>
        
        <div id="header-wrapper">
            <nav>
                <ul>
                    {% if session.user %}
                    <li><a href="{{URL}}setting"><img src="{{session.user.url_photo}}" alt="photo de profil" id="photo_navbar"/>{{session.user.pseudo}}</a></li>
                    <li><a href="{{URL}}disconnect"><i class="fas fa-sign-out-alt"></i>SE DECONNECTER</a></li>
                    {% endif %}

                    {% if not session.user %}
                    <li><a href="{{URL}}inscription">S'INSCRIRE</a></li>
                    <li><a href="{{URL}}connection">SE CONNECTER</a></li>
                    {% endif %}
                </ul>
            </nav>

            <div class="intro_blog">
                <p>BLOG</p>
                <a href="#" id="chevron"><i class="fa fa-chevron-down"></i></a>
            </div>
            
        
        </div>
    </header>

    <section id="blog">

        <div id="posts">
            {% for article in articles %}
            <article>
                <div class="post">
                    <div class="img_bg" style="background-image:url({{article.url_image}})"></div>
                </div>
                <div class="post_infos">
