{% extends "Layout.twig" %}


{% block title %}
    <title>Connection</title>
{% endblock %}



{% block description %}
    <meta name="description" content="Connectez-vous sur le site du cinéma"/>
{% endblock %}



{% block content %}

    <div class="wrapper">

    {% include ("Nav_bar.twig") %}   
     
        <div class="container">


            <div class="block_form">
                <h1>Connectez-vous</h1>

                <form action="{{URL}}connection" method="post">
                    <div class="input_form">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" required/>
                    </div>

                    <div class="input_form">
                        <label for="password">Mot de passe</label>
                        <input type="password" id="password" name="password" required/>
                    </div>


                    <div class="btn_form_center">
                        <button type="submit" name="form_submit">Valider</button>
                    </div>
                
                </form>
                <div>
                    <a href="{{URL}}password_forgot">Mot de passe oublié</a>
                </div>

               
                {% if session.flash.error_connect %}
                <p class="error message">{{session.flash.error_connect}}</p>
                {% endif %}
            </div>
        </div>
    
    </div>


{% endblock %}

